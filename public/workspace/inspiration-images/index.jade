extends ../../layout

block append vars
  - bodyclass = 'workspace-view workspace-folder-view workspace-inspiration-images-view workspace-view-only-view product-none'

block prepend title
  | Inspiration Images | Workspace | 

block content
  .row.page-content.show-left-side-panel
    include ../../partials/workspace/left-side-panel
    
    .right-side-panel
      .row.title-row.border-bottom.block-hor-md
        .block-ver-xs.block-right-xs.pull-left
          h1.tight.inline-block.multi-line
            span Workspace
            | Inspiration Images
        
        .block-ver-md.block-right-sm.pull-left.hoverable.btn-top-board-context-menu
          span.text-grey.wgsn-font 200
          i.icon.icon-caret-down.text-grey
          include ../../partials/context-menus/top-board-context-menu

        include ../../partials/workspace/share-block
        
        .view-only-block.block-ver-sm.pull-left
          i.icon.icon-eye
          span.has-tooltip.tooltip-down.tooltip-wrap(data-tooltip="You can only view this board. To make changes, ask the board owner for edit permissions.") View only access

        include ../../partials/workspace/utility-block
        include ../../partials/floating-utility-row

      .btn-left-side-panel.hoverable: i.icon.icon-angle-left
      include ../../partials/images-row
    
    include ../../partials/workspace/comments-panel