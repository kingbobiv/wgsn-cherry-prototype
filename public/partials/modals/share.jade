mixin share-user(img, initials, name, owner, permission)
  .row.share-user.border-bottom
    .col-xs-8
      .block-left-xs.block-ver-xxs
        if img
          .avatar.avatar-sm.pull-left(style="background-image: url('" + img + "')")
        else
          .avatar.avatar-sm.pull-left(data-initials=initials)

        .block-top-xxs.pull-left= name

    if owner
      .col-xs-4.text-right
        .block-xs: p.tight Owner
    
    if !owner
      .col-xs-3
        select.pull-right
          option Can edit
          option Can view

      .col-xs-1
        .block-ver-xs: i.icon.icon-cross-circle

//- ==================================================

.modal#share-modal
  .modal-header
    h2.pull-left.tight Share
    i.icon.icon-cross.pull-right.hoverable.close-modal

  .modal-content
    .block-bot-md
      .block-sm.border
        .row
          .col-xs-12
            h3 Invite people
        
        .row
          .col-xs-3
            select
              option Can edit
              option Can view
          
          .col-xs-9
            input(type="text", placeholder="Name")

    .row
      .col-xs-12
        h3 Who has access

    .border.share-user-container
