mixin notification(unread, img, initials, notification, time)
  a(href="/workspace/autumn-winter-2016")
    li.notification.border-bottom
      if unread
        .unread-dot.pull-left
      if img
        .avatar.pull-left(style="background-image: url('" + img + "')")
      else
        .avatar.pull-left(data-initials=initials)
      .text.pull-left
        p= notification
        p.comment-time.tight.text-grey= time

ul.context-menu.text-left#notifications-context-menu
  li.header-row.border-bottom.bg-xlt-grey
    h3.tight Notifications

